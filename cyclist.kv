<VelocityPage>:
    canvas.before:
        Rectangle:
            source: app.background_path
            size: root.width, root.height
            pos: self.pos

    ScrollView:
        BoxLayout:
            spacing: 40
            orientation: "vertical"
            gravity: 'center'
            
            BoxLayout:
                pos_hint: {"center_x": 0.5}
                orientation: "vertical"
                spacing: 50
                size_hint: 1, None
                size: "300dp", "130dp"
                
                BoxLayout:
                    pos_hint: {"center_x": 0.5}
                    size_hint: .9, None
                    size: "300dp", "40dp"
                    Label:
                        text: "VELOCITY"
                        size_hint: (1,1)

                BoxLayout:
                    size_hint: .9, None
                    size: "300dp", "40dp"
                    pos_hint: {"center_x": 0.5}
                    Button:
                        text: 'Go Back'
                        background_color: app.btn_color
                        background_normal: ''
                        size_hint: (.7, None)
                        size: "400dp", "40dp"
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                        on_press: root.go_back_to_home_page_button()

            BoxLayout:
                pos_hint: {"center_x": 0.5}
                orientation: "vertical"
                spacing: 10
                size_hint: 1, None
                size: "300dp", "140dp"
                
                BoxLayout:
                    size_hint: .9, None
                    size: "300dp", "40dp"
                    pos_hint: {"center_x": 0.5}
                    Label:
                        text: "Real-time Pedal Velocity :"
                        size_hint: (.7, None)
                        size: "300dp", "40dp"
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                        canvas.before:
                            Color:
                                rgba: app.Label_Background_Color
                            Rectangle:
                                pos: self.pos
                                size: self.size
                    Label:
                        text: str(root.real_time_Velocity) + " km/h"
                        size_hint: (.7, None)
                        size: "300dp", "40dp"
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                        canvas.before:
                            Color:
                                rgba: app.input_color
                            Rectangle:
                                pos: self.pos
                                size: self.size
                
                BoxLayout:
                    size_hint: .9, None
                    size: "300dp", "40dp"
                    pos_hint: {"center_x": 0.5}
                    Label:
                        text: "Target Pedal Velocity :"
                        size_hint: (.7, None)
                        size: "300dp", "40dp"
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                        canvas.before:
                            Color:
                                rgba: app.Label_Background_Color
                            Rectangle:
                                pos: self.pos
                                size: self.size
                    Label:
                        text: str(root.target_velocity) + " km/h"
                        size_hint: (.7, None)
                        size: "300dp", "40dp"
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                        canvas.before:
                            Color:
                                rgba: app.input_color
                            Rectangle:
                                pos: self.pos
                                size: self.size
                
                BoxLayout:
                    size_hint: .9, None
                    size: "300dp", "40dp"
                    pos_hint: {"center_x": 0.5}
                    Label:
                        text: "Average Pedal Velocity :"
                        size_hint: (.7, None)
                        size: "300dp", "40dp"
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                        canvas.before:
                            Color:
                                rgba: app.Label_Background_Color
                            Rectangle:
                                pos: self.pos
                                size: self.size
                    Label:
                        text: str((root.avg_velocity)//1)+" km/h"
                        size_hint: (.7, None)
                        size: "300dp", "40dp"
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                        canvas.before:
                            Color:
                                rgba: app.input_color
                            Rectangle:
                                pos: self.pos
                                size: self.size
                                
                BoxLayout:
                    size_hint: .9, None
                    size: "300dp", "40dp"
                    pos_hint: {"center_x": 0.5}
                    Label:
                        text: "Max Pedal Velocity :"
                        size_hint: (.7, None)
                        size: "300dp", "40dp"
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                        canvas.before:
                            Color:
                                rgba: app.Label_Background_Color
                            Rectangle:
                                pos: self.pos
                                size: self.size
                    Label:
                        text: str((root.max_velocity)//1)+" km/h"
                        size_hint: (.7, None)
                        size: "300dp", "40dp"
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                        canvas.before:
                            Color:
                                rgba: app.input_color
                            Rectangle:
                                pos: self.pos
                                size: self.size

            BoxLayout:
                size_hint: .9, None
                size: "300dp", "230dp"
                orientation: "vertical"
                pos_hint: {"center_x": 0.5}
                
                Label:
                    text: "Graphical Representation"
                    size_hint: (1, None)
                    size: "300dp", "30dp"
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}

                ScrollView:
                    id: view
                    do_scroll_x: True
                    do_scroll_y: False
                    orientation: "vertical"
                    size_hint: 1, 0.5
                    scroll_type: ["content"]

                    BoxLayout:
                        orientation: "vertical"
                        size_hint: None, 1
                        width: view.width*root.zoom

                        BoxLayout:
                            id: graph
                            size_hint: 1, 1

                BoxLayout:
                    id: zoom
                    size_hint: 1,0.2
                    orientation: "horizontal"

                    Button:
                        text: "-"
                        size_hint_x: None
                        width: self.height
                        on_release: root.update_zoom("-")
                        background_color: app.btn_color
                        background_normal: ''

                    Label: 
                        text: "x"
                    
                    Button: 
                        text: "+"
                        size_hint_x: None
                        width: self.height
                        on_release: root.update_zoom("+")
                        background_color: app.btn_color
                        background_normal: ''

            BoxLayout:
                size_hint: 1, None
                size: "300dp", "200dp"
                pos_hint: {"center_x": 0.5}





