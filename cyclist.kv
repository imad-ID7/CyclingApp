                        text_size: self.width, None
                        canvas.before:
                            Color:
                                rgba: (1/255, 174/255, 96/255, .5)
                            Rectangle:
                                pos: self.pos
                                size: self.size

            BoxLayout:
                size_hint: 1, None
                size: "632dp", "180dp"
                pos_hint: {"center_x": 0.5}
                orientation: "vertical"
                spacing: "10dp"
                BoxLayout:
                    size_hint: 1, None
                    size: "300dp", "40dp"
                    pos_hint: {"center_x": 0.5}
