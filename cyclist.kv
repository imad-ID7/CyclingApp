<HomePage>:
    canvas.before:
        Rectangle:
            source: app.background_path
            size: root.width, root.height
            pos: self.pos
    orientation: "vertical"
    padding: '10dp'  # Adjust padding
    spacing: "10dp"  # Adjust spacing

    ScrollView:
        BoxLayout:
            size_hint_y: None
            height: self.minimum_height
            orientation: "vertical"
            padding: '10dp'  # Adjust padding
            spacing: "10dp"  # Adjust spacing

            BoxLayout:
                size_hint: 1, None
                size: "300dp", "40dp"
                pos_hint: {"center_x": 0.5}
                Label: 
                    text: "Welcome, " + root.firstname_loaded
                    font_size: '25sp'

            BoxLayout:
                size_hint: .9, None
                size: "300dp", "40dp"
                pos_hint: {"center_x": 0.5}
                Label:
                    text: "Your Target Zone is: "
                    size_hint: (.7, None)
                    size: "300dp", "40dp"
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    canvas.before:
                        Color:
                            rgba: app.Label_Background_Color
                        Rectangle:
                            pos: self.pos
                            size: self.size
                Label:
                    text: root.current_zone
                    size_hint: (.7, None)
                    size: "300dp", "40dp"
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    canvas.before:
                        Color:
                            rgba: app.input_color
                        Rectangle:
                            pos: self.pos
                            size: self.size

            BoxLayout:
                size_hint: .9, None
                size: "300dp", "40dp"
                pos_hint: {"center_x": 0.5}
                Label:
                    text: "Zone on BPM is: "
                    size_hint: (.7, None)
                    size: "300dp", "40dp"
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    canvas.before:
                        Color:
                            rgba: app.Label_Background_Color
                        Rectangle:
                            pos: self.pos
                            size: self.size
                Label:
                    text:  root.min_target_zone + " to " + root.max_target_zone
                    size_hint: (.7, None)
                    size: "300dp", "40dp"
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    canvas.before:
                        Color:
                            rgba: app.input_color
                        Rectangle:
                            pos: self.pos
                            size: self.size

            BoxLayout:
                size_hint: .9, None
                size: "300dp", "40dp"
                pos_hint: {"center_x": 0.5}
                Label:
                    text: "The Target Velocity is: "
                    size_hint: (.7, None)
                    size: "300dp", "40dp"
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    canvas.before:
                        Color:
                            rgba: app.Label_Background_Color
                        Rectangle:
                            pos: self.pos
                            size: self.size
                Label:
                    text: root.target_velocity + " Km/h"
                    size_hint: (.7, None)
                    size: "300dp", "40dp"
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    canvas.before:
                        Color:
                            rgba: app.input_color
                        Rectangle:
                            pos: self.pos
                            size: self.size
                            
            BoxLayout:
                size_hint: 0.7, None
                size: "300dp", "280dp"
                pos_hint: {"center_x": 0.5}
                spacing: "10dp"
                orientation: "vertical"
                BoxLayout:
                    size_hint: 1, None
                    size: "140dp", "90dp"
                    pos_hint: {"center_x": 0.5}
                    Button:
                        text: root.start_stop_training
                        background_color: root.start_stop_training_color
                        background_normal: ''
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                        on_press: root.start_training()
                BoxLayout:
                    size_hint: 1, None
                    size: "300dp", "60dp"
                    pos_hint: {"center_x": 0.5}
                    Label:
                        text: "The Next Update, After: " + root.new_update + " min"
                        size_hint: (.7, None)
                        size: "300dp", "40dp"
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                        canvas.before:
                            Color:
                                rgba: app.input_color
                            Rectangle:
                                pos: self.pos
                                size: self.size

            BoxLayout:
                size_hint: 1, None
                size: "300dp", "280dp"
                pos_hint: {"center_x": 0.5}
                spacing: "10dp"
                BoxLayout:
                    size_hint: 1, None
                    size: "140dp", "140dp"
                    pos_hint: {"center_x": 0.5}
                    Button:
                        text: 'My Velocity'
                        background_color: app.btn_color
                        background_normal: ''
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                        on_press: root.go_to_velocity_page_button()
                BoxLayout:
                    size_hint: 1, None
                    size: "140dp", "140dp"
                    pos_hint: {"center_x": 0.5}
                    Button:
                        text: 'My Heart Rate'
                        background_color: app.btn_color
                        background_normal: ''
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                        on_press: root.go_to_heart_rate_page_button()

            BoxLayout:
                size_hint: 1, None
                size: "300dp", "200dp"
                pos_hint: {"center_x": 0.5}
                spacing: "10dp"
                BoxLayout:
                    size_hint: 1, None
                    size: "140dp", "140dp"
                    pos_hint: {"center_x": 0.5}
                    Button:
                        text: 'Change My Zone'
                        background_color: app.btn_color
                        background_normal: ''
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                        on_press: root.go_to_zones_page_button()
                BoxLayout:
                    size_hint: 1, None
                    size: "140dp", "140dp"
                    pos_hint: {"center_x": 0.5}
                    Button:
                        text: 'My Profile'
                        background_color: app.btn_color
                        background_normal: ''
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                        on_press: root.go_to_profile_page_button()

            BoxLayout:
                size_hint: 1, None
                size: "300dp", "60dp"
                pos_hint: {"center_x": 0.5}
                Button:
                    text: 'Log Out'
                    background_color: app.btn_color
                    background_normal: ''
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    on_press: root.log_out_button()




<ZonesPage>:
    canvas.before:
        Rectangle:
            source: app.background_path
            size: root.width, root.height
            pos: self.pos
            
    ScrollView:
        BoxLayout:
            orientation: "vertical"
            spacing: 20
            size_hint_y: None
            height: self.minimum_height
            padding: '20dp'
            
            BoxLayout:
                pos_hint: {"center_x": 0.5}
                size_hint: 1, None
                size: "300dp", "40dp"
                Label:
                    text: "TARGET ZONE"
                    size_hint: (1,1)
                    
            BoxLayout:
                size_hint: .9, None
                size: "300dp", "40dp"
                pos_hint: {"center_x": 0.5}
                Button:
                    text: 'Go Back'
                    background_color: app.btn_color
                    background_normal: ''
                    size_hint: (.7, None)
                    size: "400dp", "40dp"
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    on_press: root.go_back_to_home_page_button()
                    
            BoxLayout:
                size_hint: 1, None
                size: "632dp", "180dp"
                pos_hint: {"center_x": 0.5}
                orientation: "vertical"
                spacing: "10dp"
                
                BoxLayout:
                    size_hint: 1, None
                    size: "300dp", "40dp"
                    pos_hint: {"center_x": 0.5}
                    Label: 
                        text: "Zone 5: MAXIMUM"
                        canvas.before:
                            Color:
                                rgba: app.Label_Background_Color
                            Rectangle:
                                pos: self.pos
                                size: self.size
                    Switch:
                        id: zone5
                        active: False
                        on_active: root.on_switch_zone(5,self.active)
                        
                BoxLayout:
                    size_hint: 1, None
                    size: "300dp", "120dp"
                    pos_hint: {"center_x": 0.5}
                    Label:
                        text: "Benefits: Increases maximum sprint race speed\nFeels like: Very exhausting for breathing and muscles\nRecommended for: Very fit persons with athletic training background"
                        size_hint_y: None
                        height: self.texture_size[1] + dp(20)
                        halign: 'left'
                        padding: dp(10), dp(10)
                        text_size: self.width, None
                        canvas.before:
                            Color:
                                rgba: (240/255, 56/255, 67/255, .5)
                            Rectangle:
                                pos: self.pos
                                size: self.size                   
            BoxLayout:
                size_hint: 1, None
                size: "632dp", "180dp"
                pos_hint: {"center_x": 0.5}
                orientation: "vertical"
                spacing: "10dp"
                BoxLayout:
                    size_hint: 1, None
                    size: "300dp", "40dp"
                    pos_hint: {"center_x": 0.5}
                    Label: 
                        text: "Zone 4: HARD"
                        canvas.before:
                            Color:
                                rgba: app.Label_Background_Color
                            Rectangle:
                                pos: self.pos
                                size: self.size
                    Switch:
                        id: zone4
                        active: False
                        on_active: root.on_switch_zone(4,self.active)
                BoxLayout:
                    size_hint: 1, None
                    size: "300dp", "120dp"
                    pos_hint: {"center_x": 0.5}
                    Label:
                        text: "Benefits: Increases maximum performance capacity\nFeels like: Muscular fatigue and heavy breathing\nRecommended for: Fit users and for short exercises"
                        size_hint_y: None
                        height: self.texture_size[1] + dp(20)
                        halign: 'left'
                        padding: dp(10), dp(10)
                        text_size: self.width, None
                        canvas.before:
                            Color:
                                rgba: (251/255, 166/255, 24/255, .5)
                            Rectangle:
                                pos: self.pos
                                size: self.size

            BoxLayout:
                size_hint: 1, None
                size: "632dp", "180dp"
                pos_hint: {"center_x": 0.5}
                orientation: "vertical"
                spacing: "10dp"
                BoxLayout:
                    size_hint: 1, None
                    size: "300dp", "40dp"
                    pos_hint: {"center_x": 0.5}
                    Label: 
                        text: "Zone 3: MODERATE"
                        canvas.before:
                            Color:
                                rgba: app.Label_Background_Color
